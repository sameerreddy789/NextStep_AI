{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.map",
      "vite.config.js",
      "package.json",
      "package-lock.json",
      "functions/**",
      ".env",
      ".env.*",
      "requirements.md",
      "design.md",
      "BUG_REPORT.md",
      "README.md",
      "FIREBASE_SECURITY_RULES.md"
    ],
    "rewrites": [
      {
        "source": "!/api/**",
        "destination": "/index.html"
      }
    ]
  }
}
